.about-main
  background-color: #fff

.about-main_wrap
  max-width: 1170px
  padding: 150px 15px
  margin: 0 auto
  @media screen and (max-width: 480px)
    padding: 100px 15px

.about-main_content
  display: flex
  margin-bottom: 80px
  @media screen and (max-width: 1024px)
    flex-direction: column-reverse
  @media screen and (max-width: 600px)
    margin-bottom: 0

.about-main_description-title
  font-size: 66px
  line-height: 79px
  letter-spacing: 0.07em
  text-transform: uppercase
  color: #000000
  margin-bottom: 40px
  margin-left: 70px
  @media screen and (max-width: 1024px)
    text-align: center
  @media screen and (max-width: 768px)
    font-size: 50px
    line-height: 60px
    margin-left: 0
  @media screen and (max-width: 480px)
    font-size: 30px
    line-height: 40px
    margin-bottom: 20px

.about-main_description-text
  font-size: 20px
  line-height: 145%
  letter-spacing: -0.03em
  color: #4F4F4F

.about-main_content-slider
  width: 670px
  height: 520px
  position: relative
  background-color: #fff
  @media screen and (max-width: 1024px)
    width: 90%
    margin: 0 auto
  @media screen and (max-width: 480px)
    height: auto
    margin-bottom: 30px
  img 
    width: 100%
    height: 100%
    max-height: 520px
    object-fit: cover

.about-main_content-slider:before
  content: ''
  display: block
  width: 1775px
  height: 583px
  border: 5px solid #C6373B
  position: absolute
  top: 200px
  left: -1500px
  z-index: 0
  @media screen and (max-width: 1400px)
    left: -1370px
  @media screen and (max-width: 1024px)
    display: none

.about-main_content-description
  width: 470px
  padding-left: 30px
  @media screen and (max-width: 1024px)
    width: 100%
    padding-left: 0
    margin-bottom: 70px

.about-main_slider-nav
  width: 700px
  margin-left: auto
  @media screen and (max-width: 1024px)
    width: 90%
    margin: 0 auto

.about-main_list-item
  img 
    width: 210px
    height: 190px
    border: 1px solid #c6373b
    display: block
    cursor: pointer
    transition: 0.3s
    &:hover
      border: 2px solid #c6373b
      transition: 0.3s
    @media screen and (max-width: 600px)
      width: 100%
    @media screen and (max-width: 480px)
      height: 150px

.about-main_slider-next, .about-main_slider-prev
  width: 129px
  height: 80px
  box-shadow: 0px 15px 35px rgba(50, 60, 88, 0.2)
  position: absolute
  bottom: -160px
  left: 0
  cursor: pointer
  background-color: #fff
  transition: 0.3s
  &:hover
    background-color: #f3f2f2
  @media screen and (max-width: 1400px)
    left: 245px
  @media screen and (max-width: 1024px)
    opacity: 0
    pointer-events: none
  @media screen and (max-width: 480px)
    display: none

.about-main_slider-prev
  left: -129px
  border-right: 1px solid 
  border-color: #323c5826
  @media screen and (max-width: 1400px)
    left: 115px

.about-main_slider-next:after, .about-main_slider-prev:after
  content: '';
  display: block
  width: 10px
  height: 10px
  position: absolute
  top: 50%

.about-main_slider-prev:after
  border-left: 2px solid #000
  border-bottom: 2px solid #000
  right: 40px
  transform: translateY(-50%) rotate(45deg)

.about-main_slider-next:after
  border-right: 2px solid #000
  border-bottom: 2px solid #000
  left: 40px
  transform: translateY(-50%) rotate(-45deg)