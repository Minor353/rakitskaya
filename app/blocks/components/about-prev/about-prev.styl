.about-prev
  background-color: #e5e5e5
  padding-bottom: 200px
  @media screen and (max-width: 480px)
    padding-bottom: 100px

.about-prev_wrap
  max-width: 1170px
  padding: 0 15px
  margin: 0 auto
  display: flex
  @media screen and (max-width: 1024px)
    flex-direction: column

.about-prev_img
  width: 570px
  height: 600px
  border: 3px solid #C6373B
  box-sizing: border-box
  position relative
  top: -125px
  z-index: 5
  @media screen and (max-width: 1024px)
    margin: 0 auto
  @media screen and (max-width: 700px)
    width: 100%
  @media screen and (max-width: 480px)
    height: 400px
    top: -60px
  img
    width: 570px
    height: 600px
    position: absolute
    top: 15px
    left: 15px
    @media screen and (max-width: 700px)
      width: 100%
      height: 100%
      top: 0
      left: 0

.about-prev_content
  flex: 1
  padding-left: 45px
  @media screen and (max-width: 1024px)
    padding-left: 0

.about-prev_title
  font-size: 66px
  line-height: 79px
  letter-spacing: 0.07em
  text-transform: uppercase
  color: #27282b
  margin: 80px 0 40px 100px
  @media screen and (max-width: 1024px)
    margin: 0
    margin-bottom: 40px
    text-align: center 
  @media screen and (max-width: 768px)
    font-size: 50px
    line-height: 60px
  @media screen and (max-width: 480px)
    font-size: 30px
    line-height: 40px
    margin-bottom: 20px

.about-prev_text
  font-size: 16px;
  line-height: 160%
  color: #4F4F4F
  padding-bottom: 40px