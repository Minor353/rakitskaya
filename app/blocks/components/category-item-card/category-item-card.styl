.category-item-card
  display: flex
  flex-direction: column
  position: relative
  &:after
    content: ''
    display: block
    width: 1700px
    height: 410px
    border-left: 6px solid #C6373B
    border-bottom: 6px solid #C6373B
    position: absolute
    left: 0
    bottom: -6px

.category-item-card_img
  width: 825px
  height: 550px
  margin-left: -180px;
  position: relative
  z-index: 1 
  img 
    width: 100%
    height: 100%
    object-fit: cover

.category-item-card_content
  margin-left: auto
  max-width: 770px
  padding: 20px 40px 40px 40px
  box-sizing: border-box
  background-color: #F4F4FA
  margin-top: -160px;
  position: relative
  z-index: 2

.category-item-card_content-tools 
  display: flex
  align-items: center
  padding: 8px
  background: #FFFFFF
  width: max-content
  margin-left: auto
  margin-bottom: 40px

.category-item-card_tools-text
  font-size: 12px;
  letter-spacing: -0.03em;
  color: #828282
  margin-right: 8px

.category-item-card_tools-icon 
  width: 20px
  height: 20px

.category-item-card_content-title
  font-size: 34px;
  color: #27282B
  padding-left: 20px
  border-left: 3px solid #C6373B
  margin-bottom: 40px

.category-item-card_content-text
  font-size: 16px
  line-height: 160%
  color: #4F4F4F
  margin-bottom: 40px

.category-item-card_content-price
  padding: 18px 80px
  background-color: #ffffff
  font-size: 20px
  line-height: 24px
  text-align: center;
  letter-spacing: -0.03em;
  color: #4F4F4F
  box-shadow: 0px 15px 35px rgba(50, 60, 88, 0.2)
  margin-left: 20px


 .item-service-layout
  .category-item-card_content-wrap
    margin-bottom: 40px
    display: flex
    align-items: center
  .category-item-card_content-tools
    margin-bottom: 0
  .category-item-card_content-text
    margin-bottom: 0