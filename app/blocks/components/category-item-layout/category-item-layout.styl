.category-item-layout
  background-color: #fff
  padding-top: 120px

.category-item-layout_wrap
  max-width: 1170px
  padding: 0 15px
  margin: 0 auto
  border-bottom: 1px solid #fff

.category-item-layout_description
  display: flex

.category-item-layout_description-content
  flex: 1
  padding-top: 110px
  padding-right: 30px
  @media screen and (max-width: 768px)
    padding-right: 0
    padding-bottom: 70px
  @media screen and (max-width: 480px)
    padding-top: 20px

.category-item-layout_description-title
  font-size: 46px
  line-height: 55px
  color: #27282B
  margin-bottom: 40px
  @media screen and (max-width: 768px)
    text-align: center
  @media screen and (max-width: 480px)
    font-size: 30px
    line-height: 40px
    margin-bottom: 20px

.category-item-layout_description-text
  font-size: 16px
  line-height: 160%
  color: #27282B

.category-item-layout_description-img
  width: 637px
  height: 627px
  margin-right: -150px;
  @media screen and (max-width: 768px)
    display: none
  img 
    width: 100%
    height: 100%
    object-fit: cover 

.category-item-layout_list-item
  margin-bottom: 150px