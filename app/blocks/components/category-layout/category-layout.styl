.category-layout
  background-color: #fff

.category-layout_wrap
  max-width: 1650px
  padding: 200px 15px
  margin: 0 auto

.category-layout_title
  font-size: 66px
  text-align: center
  letter-spacing: 0.07em
  text-transform: uppercase
  color: #27282B
  margin-bottom: 80px
  @media screen and (max-width: 768px)
    font-size: 50px
  @media screen and (max-width: 480px)
    font-size: 30px
    line-height: 40px
    margin-bottom: 60px
