.contact-block
  background-color: #e5e5e5

.contact-block_wrap
  max-width: 1170px
  padding: 200px 15px
  margin: 0 auto
  display: flex
  align-items: center
  @media screen and (max-width: 1024px)
    flex-direction: column
    padding-bottom: 100px
  
.contact-block_content
  width: 570px
  @media screen and (max-width: 1400px)
    padding-left: 70px
  @media screen and (max-width: 1024px)
    padding-left: 0
    width: 100%
    margin-bottom: 70px

.contact-block_title
  font-size: 66px
  line-height: 79px
  letter-spacing: 0.07em
  text-transform: uppercase
  margin-bottom: 40px
  color: linear-gradient(141.2deg, #3D3D48 6.81%, #070B0C 75.75%) 
  @media screen and (max-width: 1024px)
    text-align: center

.contact-block_list
  @media screen and (max-width: 1024px)
    display: flex
    align-items: center
    justify-content: space-around

.contact-block_list-item
  margin-bottom: 30px
  position: relative
  padding-left: 35px

.contact-block_list-item-icon
  width: 20px
  height: 20px
  border: 1px solid 
  position: absolute
  left: 0
  top: 50%
  transform: translateY(-50%)

.contact-block_item-link
  display: block
  text-decoration: none
  font-size: 20px
  line-height: 140%
  color: #4F4F4F

.contact-block_map
  position: relative

.contact-block_map-content
  position: absolute
  top: 10%
  left: 50%
  transform: translateX(-50%)
  text-align: center

.contact-block_map-content-wrap
  width: 300px
  padding: 30px
  padding-bottom: 50px
  box-sizing: border-box
  position: relative

.contact-block_map-content-bg
  position: absolute
  top: -30px
  bottom: -50px
  left: -30px
  right: -30px
  z-index -1
  img 
    width: 100%
    height: 100%

.contact-block_map-adress
  font-size: 24px
  line-height: 29px
  color: #4F4F4F
  margin-bottom: 9px

.contact-block_map-link
  text-decoration: none
  font-size: 20px
  line-height: 24px
  letter-spacing: -0.03em
  color: #C6373B

.contact-block_map-img
  width: 826px
  height: 532px
  margin-left: -50px
  img 
    width: 100%
    height: 100%
    object-fit: cover

.contact-block_map-place
  width: 45px
  height: 45px
  position: absolute
  top: 38%
  left: 50%
  transform: translateX(-50%)