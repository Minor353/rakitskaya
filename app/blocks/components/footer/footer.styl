.footer
  background: linear-gradient(170.99deg, #3D3D48 6.81%, #070B0C 75.75%)

.footer_wrap
  max-width: 1170px
  padding: 40px 15px
  margin: 0 auto
  display: flex
  justify-content: space-between
  align-items: center
  @media screen and (max-width: 768px)
    flex-direction: column

.footer_allright 
  background: #090E1D
  padding: 7px 15px
  text-align: center
  a
    text-decoration: none
    font-size: 12px
    line-height: 14px
    color: #FFFFFF