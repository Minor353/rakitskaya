.instagram
  background-color: #E5E5E5
  padding-bottom: 600px
  padding-top: 150px
  @media screen and (max-width: 480px)
    padding-top: 100px

.instagram_title
  font-size: 66px
  line-height: 79px
  text-align: center
  letter-spacing: 0.07em
  text-transform: uppercase
  color: linear-gradient(166.71deg, #3D3D48 6.81%, #070B0C 75.75%)
  @media screen and (max-width: 768px)
    font-size: 50px
    line-height: 60px
  @media screen and (max-width: 480px)
    font-size: 30px
    line-height: 40px
    margin-bottom: 20px