.item-service-layout
  padding-top: 120px
  background-color: #fff

.item-service-layout_wrap
  max-width: 1170px
  padding: 0 15px
  margin: 0 auto

.item-service-layout_description
  display: flex

.item-service-layout_description-content
  flex: 1
  padding-top: 150px
  padding-right: 30px
  @media screen and (max-width: 768px)
    text-align: center
    padding-right: 0
    padding-bottom: 70px
  @media screen and (max-width: 700px)
    padding-top: 70px

.item-service-layout_description-title
  font-size: 46px
  line-height: 55px
  color: #27282B
  margin-bottom: 30px
  @media screen and (max-width: 480px)
    font-size: 30px
    line-height: 40px
    margin-bottom: 20px

.item-service-layout_description-text
  font-size: 16px
  line-height: 160%
  color: #27282B
  margin-bottom: 80px

.item-service-layout_description-img
  width: 637px
  height: 627px
  margin-right: -230px;
  @media screen and (max-width: 768px)
    display: none
  img 
    width: 100%
    height: 100%
    object-fit: cover

.item-service-layout_block
  margin-bottom: 80px
  ul
    padding-left: 20px
    li
      list-style-type: disc
      color:#C6373B
      margin-bottom: 16px
      span 
        font-size: 14px
        letter-spacing: -0.03em
        color: #828282

.item-service-layout_block--padding
  padding-top: 170px

.item-service-layout_block-title
  font-size: 46px
  line-height: 55px
  color: #27282B
  margin-bottom: 40px
  position: relative
  width: max-content
  display: flex
  align-items: center
  @media screen and (max-width: 480px)
    font-size: 30px
    line-height: 40px
    margin-bottom: 20px
  &:after
    content: ''
    display: block
    border: 3px solid #C6373B
    width: 1700px
    margin-left: 40px

.item-service-layout_block-description
  font-size: 16px
  line-height: 160%
  color: #4F4F4F
  margin-bottom: 23px

.item-service-layout_btn
  width: max-content
  margin: 0 auto
  padding-bottom: 200px
  padding-top: 100px