.master-card
  width: 300px

.master-card_img
  width: 300px
  height: 320px
  img 
    width: 100%
    height: 100%
    object-fit: cover

.master-card_content
  background: #FFFFFF
  box-shadow: 0px 15px 35px rgba(50, 60, 88, 0.2)
  width: 270px
  margin: 0 auto
  position: relative
  z-index: 3
  margin-top: -50px 
  padding: 40px 10px
  box-sizing: border-box

.master-card_content-title
  font-size: 18px
  line-height: 22px
  text-align: center
  letter-spacing: 0.07em
  text-transform: uppercase
  color: #333333
  padding: 0 15px
  margin-bottom: 15px

.master-card_content-text
  font-size: 14px
  line-height: 145%
  text-align: center
  letter-spacing: -0.03em
  color: #4F4F4F