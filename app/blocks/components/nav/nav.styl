.nav_list
  padding: 0
  margin: 0
  display: flex
  padding-bottom: 3px
  &-item
    list-style-type: none
    padding-bottom: 3px
    border-bottom: 3px solid transparent
    transition: 0.3s

.nav_item-link
  text-decoration: none
  font-size: 20px
  line-height: 24px
  color: #FFFFFF
  display: block
  padding: 67px 20px 20px 20px
  background-color: transparent
  transition: 0.3s

.nav_list-item:hover
  border-color: #C6373B
  .nav_item-link
    background-color: #C6373B