.popup-form
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: -5
  opacity: 0
  pointer-events: none
  background: linear-gradient(121.5deg, rgba(61, 61, 72, 0.5) 6.81%, rgba(7, 11, 12, 0.5) 75.75%)
  display: flex
  transition: 0.3s
  .main-form_form-label
    @media screen and (max-width: 768px)
      width: 100%
  .main-form_form-label:first-child
    @media screen and (max-width: 768px)
      margin-bottom: 30px
  .main-form_btn
    @media screen and (max-width: 480px)
      width: 100%
      margin-top: 35px
      padding: 20px
  .main-form_subtitle
    @media screen and (max-width: 480px)
      margin-bottom: 30px

.popup-form--active
  z-index: 9999
  opacity: 1
  pointer-events: all

.popup-form_content
  position: relative
  margin: auto
  padding: 80px 130px
  background: linear-gradient(170.99deg, #3D3D48 6.81%, #070B0C 75.75%)
  @media screen and (max-width: 768px)
    padding: 80px 60px
  @media screen and (max-width: 480px)
    padding: 60px 15px

.popup-form_content-img
  position: absolute
  top: -30px
  left: -100px
  right: -156px
  bottom: -65px
  pointer-events: none
  @media screen and (max-width: 768px)
    display: none
  img 
    width: 100%
    height: 100%

.popup-form_content-cross
  position: absolute
  top: 20px
  right: 20px
  width: 30px
  height: 30px
  transform: scale(1)
  cursor: pointer
  transition: 0.3s
  &:hover
    transform: scale(1.2)
  &:after
    content: ''
    display: block
    width: 35px
    height: 2px
    background-color: #fff
    position: absolute
    transform: translateY(15px) rotate(45deg) 
  &:before
    content: ''
    display: block
    width: 35px
    height: 2px
    background-color: #fff
    position: absolute
    transform: translateY(15px) rotate(-45deg)

.popup-form_success
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  display: flex
  pointer-events: none

.popup-form_success-content
  margin: auto
  text-align: center
  opacity: 0
  transition: 0.3

.popup-form_success-title
  font-weight: bold
  font-size: 46px
  line-height: 58px
  color: #FFFFFF

.popup-form_success-subtitle
  font-weight: 300
  font-size: 16px
  color: #E0E0E0



.popup-form--submit
  .main-form_title
    opacity: 0
    pointer-events: none
  .main-form_subtitle
    opacity: 0
    pointer-events: none
  .main-form_form
    opacity: 0
    pointer-events: none
  .popup-form_success-content
    opacity: 1
    transition-delay: 0.3s