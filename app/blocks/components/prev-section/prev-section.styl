.prev-section
  position: relative
  background: linear-gradient(124.58deg, #3D3D48 6.81%, #070B0C 75.75%)
  height: 100vh
  box-sizing: border-box
  @media screen and (max-width: 480px)
    height: 740px


.prev-section_slider
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  pointer-events: none
  z-index: 1

.prev-section_slider-item
  width: 100%
  height: 100vh
  display: block
  object-fit: cover

.prev-section_wrap
  max-width: 1170px
  height: 100%
  padding: 0 15px
  margin: 0 auto
  display: flex
  position: relative
  z-index: 3

.prev-section_content
  margin: auto 0
  @media screen and (max-width: 1400px)
    padding-left: 70px
  @media screen and (max-width: 768px)
    margin: auto
    padding-left: 0px

.prev-section_title
  font-size: 86px
  line-height: 103px
  letter-spacing: 0.07em
  text-transform: uppercase
  margin-bottom: 80px
  @media screen and (max-width: 1024px)
    text-align: center
  @media screen and (max-width: 768px)
    font-size: 50px
    line-height: 65px
    margin-bottom: 40px
  @media screen and (max-width: 480px)
    font-size: 32px
    line-height: 46px
    margin-bottom: 30px
  div:nth-child(1)
    color: #FFFFFF
  div:nth-child(2)
    color: #C6373B