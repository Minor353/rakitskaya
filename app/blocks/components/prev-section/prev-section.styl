.prev-section
  position: relative
  background: linear-gradient(124.58deg, #3D3D48 6.81%, #070B0C 75.75%)
  height: 100vh
  box-sizing: border-box


.prev-section_slider
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  pointer-events: none

.prev-section_slider-item
  width: 100%
  height: 100%
  display: block

.prev-section_wrap
  max-width: 1170px
  height: 100%
  padding: 0 15px
  margin: 0 auto
  display: flex

.prev-section_content
  margin: auto 0