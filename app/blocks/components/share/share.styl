.share
  background-color: #e5e5e5

.share_wrap
  max-width: 1325px
  padding: 200px 15px 
  padding-bottom: 300px
  margin: 0 auto
  position: relative
  display: flex 
  @media screen and (max-width: 700px)
    flex-direction: column
    padding: 100px 15px

.share_img
  width: 925px
  height: 600px
  @media screen and (max-width: 700px)
    display: none
  img 
    width: 100%
    height: 100%
    object-fit: cover

.share_title
  font-size: 66px
  line-height: 79px
  letter-spacing: 0.07em
  text-transform: uppercase
  color: #27282B
  margin-left: 154px
  margin-top: 80px
  flex: 1
  @media screen and (max-width: 768px)
    margin-left: 90px
    font-size: 50px
    line-height: 60px
  @media screen and (max-width: 700px)
    margin-left: 0
    text-align: center
    margin-bottom: 60px
  @media screen and (max-width: 480px)
    font-size: 30px
    line-height: 40px
    margin-bottom: 20px

.share_slider-wrap
  position: absolute
  width: 670px
  height: 450px
  right: 0
  top: 439px
  z-index: 3
  @media screen and (max-width: 700px)
    position: static
    width: 100%

.share_slider-arrow-wrap
  position: absolute
  border: 5px solid #C6373B
  width: 775px
  height: 289px
  top: 360px
  right: -380px
  @media screen and (max-width: 1400px)
    right: -190px
  @media screen and (max-width: 700px)
    display: none

.share_slider
  background-color: #e5e5e5

.share_slider-next, .share_slider-prev
  width: 129px
  height: 80px
  box-shadow: 0px 15px 35px rgba(50, 60, 88, 0.2)
  position: absolute
  bottom: -120px
  cursor: pointer
  background-color: #fff
  

.share_slider-next
  right: 0
  @media screen and (max-width: 1400px)
    right: 210px
  @media screen and (max-width: 480px)
    right: 0
.share_slider-prev
  right: 129px
  border-right: 1px solid 
  border-color: #323c5826
  @media screen and (max-width: 1400px)
    right: 340px
  @media screen and (max-width: 480px)
    left: 0

.share_slider-next:after, .share_slider-prev:after
  content: '';
  display: block
  width: 10px
  height: 10px
  position: absolute
  top: 50%

.share_slider-prev:after
  border-left: 2px solid #000
  border-bottom: 2px solid #000
  right: 40px
  transform: translateY(-50%) rotate(45deg)

.share_slider-next:after
  border-right: 2px solid #000
  border-bottom: 2px solid #000
  left: 40px
  transform: translateY(-50%) rotate(-45deg)

.share_content-img
  width: 670px
  height: 450px
  box-shadow: 0px 15px 35px rgba(50, 60, 88, 0.2)
  @media screen and (max-width: 700px)
    width: 100%
    height: auto
  img 
    width: 100%
    height: 100%
    object-fit: cover