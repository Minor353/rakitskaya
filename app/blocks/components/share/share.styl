.share
  background-color: #e5e5e5

.share_wrap
  max-width: 1325px
  padding: 200px 15px 
  padding-bottom: 300px
  margin: 0 auto
  position: relative
  display: flex 

.share_img
  width: 925px
  height: 600px
  img 
    width: 100%
    height: 100%
    object-fit: cover

.share_title
  font-size: 66px
  line-height: 79px
  letter-spacing: 0.07em
  text-transform: uppercase
  color: #27282B
  margin-left: 154px
  margin-top: 80px
  flex: 1

.share_slider-wrap
  position: absolute
  width: 670px
  height: 450px
  right: 0
  top: 439px
  z-index: 3

.share_slider-arrow-wrap
  position: absolute
  border: 5px solid #C6373B
  width: 775px
  height: 289px
  top: 360px
  right: -380px
  @media screen and (max-width: 1400px)
    right: -190px

.share_slider
  background-color: #e5e5e5

.share_slider-next, .share_slider-prev
  width: 129px
  height: 80px
  box-shadow: 0px 15px 35px rgba(50, 60, 88, 0.2)
  position: absolute
  bottom: -120px
  right: 0
  cursor: pointer
  background-color: #fff
  @media screen and (max-width: 1400px)
    right: 210px

.share_slider-prev
  right: 129px
  border-right: 1px solid 
  border-color: #323c5826
  @media screen and (max-width: 1400px)
    right: 340px

.share_slider-next:after, .share_slider-prev:after
  content: '';
  display: block
  width: 10px
  height: 10px
  position: absolute
  top: 50%

.share_slider-prev:after
  border-left: 2px solid #000
  border-bottom: 2px solid #000
  right: 40px
  transform: translateY(-50%) rotate(45deg)

.share_slider-next:after
  border-right: 2px solid #000
  border-bottom: 2px solid #000
  left: 40px
  transform: translateY(-50%) rotate(-45deg)

.share_content-img
  width: 670px
  height: 450px
  box-shadow: 0px 15px 35px rgba(50, 60, 88, 0.2)
  img 
    width: 100%
    height: 100%
    object-fit: cover