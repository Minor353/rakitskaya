.share
  background-color: #e5e5e5

.share_wrap
  max-width: 1325px
  padding: 200px 15px 
  padding-bottom: 300px
  margin: 0 auto
  position: relative
  display: flex 

.share_img
  width: 925px
  height: 600px
  img 
    width: 100%
    height: 100%
    object-fit: cover

.share_title
  font-size: 66px
  line-height: 79px
  letter-spacing: 0.07em
  text-transform: uppercase
  color: #27282B
  margin-left: 154px
  margin-top: 80px
  flex: 1

.share_slider-wrap
  position: absolute
  right: 0
  top: 439px

.share_slider-content
  position: relative
  box-shadow: 0px 15px 35px rgba(50, 60, 88, 0.2)

 .share_content-img
    width: 670px
    height: 450px
    img 
      width: 100%
      height: 100%
      object-fit: cover