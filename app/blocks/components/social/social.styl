.social
  position: absolute
  left 100px
  top: 50%
  transform: translateY(-50%)
  z-index: 3

.social_list 
  padding: 0
  margin: 0
  &-item
    list-style-type: none
  &-item:first-child
    margin-bottom: 45px

.social_item-link
  text-decoration: none
  font-size: 16px
  line-height: 19px
  color: #ffffff
  display: flex
  flex-direction: column
  align-items: center
  transition: 0.3s

.social_link-icon
  width: 28px
  height: 28px
  margin-bottom: 20px
  svg 
    width: 100%
    height 100%
    fill: #fff
    transition: 0.3s

.social--contact
  .social_link-icon
    svg 
      fill: #27282B
  .social_item-link
    color: #27282B

.social_link-text
  writing-mode: tb-rl
  transform: rotate(180deg)

.social_item-link:hover
  color: #C6373B
  svg
    fill: #C6373B 