.tabs-table_tabs
  display: flex
  align-items: center
  background: #FFFFFF
  padding: 29px 40px
  box-shadow: 0px 15px 35px rgba(50, 60, 88, 0.2)
  margin-bottom: 40px

.tabs-table_tabs-item
  font-size: 18px
  text-align: center
  letter-spacing: 0.07em
  text-transform: uppercase
  color: #333333
  padding: 0 5px
  flex: 1
  min-width 195px
  box-sizing: border-box
  text-align: center
  cursor: pointer
  transition: 0.3s
  &:hover
    color: #C6373B

.tabs-table_btn
  padding-top: 80px
  display: flex
  justify-content: center