.tabs-table_tabs
  display: flex
  align-items: center
  background: #FFFFFF
  padding: 29px 40px
  box-shadow: 0px 15px 35px rgba(50, 60, 88, 0.2)
  margin-bottom: 40px
  @media screen and (max-width: 1024px)
    padding: 15px 40px
    flex-wrap: wrap

.tabs-table_tabs-item
  font-size: 18px
  text-align: center
  letter-spacing: 0.07em
  text-transform: uppercase
  color: #333333
  padding: 0 5px
  flex: 1
  min-width 195px
  box-sizing: border-box
  text-align: center
  cursor: pointer
  transition: 0.3s
  @media screen and (max-width: 1024px)
    padding: 20px 5px
  &:hover
    color: #C6373B

.tabs-table_tabs-item--active 
  color: #C6373B

.tabs-table_btn
  padding-top: 80px
  display: flex
  justify-content: center

.tabs-table_content
  background-color: white
  margin-top: 0px
  position: relative
  opacity: 1
  overflow: hidden
  transition: all 1s ease
  top: 0
  min-height: 340px

.tabs-table_content-item
  display: none
  @media screen and (max-width: 768px)
    overflow-x: scroll

@keyframes tabEffect {
   from {
      top: -40px;
   }
   to {
      top: 0px;
   }
}

.tabs-table_content-item.tabs-table_content-item--active 
  transition: all 1s ease;
  display: block;
  animation: fadeEffect 0.6s ease;

@keyframes fadeEffect {
   from {
      opacity: 0;
      margin-left: 30px;
   }
   to {
      opacity: 1;
      margin-left: 0;
   }
}