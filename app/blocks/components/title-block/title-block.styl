.title-block
  background: linear-gradient(124.58deg, #3D3D48 6.81%, #070B0C 75.75%)

.title-block_wrap
  max-width: 1170px
  padding: 0 15px
  padding-top: 200px
  margin: 0 auto
  display: flex
  @media screen and (max-width: 1024px)
    padding-bottom: 130px
  @media screen and (max-width: 480px)
    padding-bottom: 90px
    padding-top: 160px

.title-block_content
  flex: 1
  padding-right: 80px
  padding-top: 130px
  @media screen and (max-width: 1024px)
    padding: 0
    text-align: center

.title-block_title
  font-size: 84px
  letter-spacing: 0.07em
  text-transform: uppercase
  color: #FFFFFF
  margin-bottom: 40px
  @media screen and (max-width: 768px)
    font-size: 50px
  @media screen and (max-width: 480px)
    font-size: 30px

.title-block_text
  font-size: 16px
  line-height: 160%
  color: #FFFFFF
  margin-bottom: 110px

.title-block_img
  width: 480px
  height: 760px
  margin-right: -190px;
  @media screen and (max-width: 1024px)
    display: none
  img 
    width: 100%
    height: 100%
    object-fit: cover 