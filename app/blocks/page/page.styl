html 
  scrollbar-color: #c6373b #3d3d48 
  scrollbar-width: thin 

/* width */
::-webkit-scrollbar 
  width: 12px
  height: 7px


/* Track */
::-webkit-scrollbar-track 
  background: #3d3d48


/* Handle */
::-webkit-scrollbar-thumb 
  background: #c6373b
  border-radius: 5px

body
  font-family: 'Source Sans Pro', sans-serif
  font-weight: 400

a, button, li
  font-family: 'Source Sans Pro', sans-serif

h2 
  font-weight: 700